{
  "manifest_version": 3,
  "name": "Vaulty",
  "version": "1.0",
  "description": "A secure password manager.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "src/assets/icon.png"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-scripts/content.ts"]
    }
  ],
  "icons": {
    "16": "src/assets/icon.png",
    "48": "src/assets/icon.png",
    "128": "src/assets/icon.png"
  }
}
